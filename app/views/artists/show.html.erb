<!-- app/views/artists/show.html.erb -->

<h1><%= @artist.name %></h1>

<p>description: <%= @artist.description %></p>
<%= image_tag @artist.image_url %>
<h3> Songs by this artists </h3>
<% Song.where(artist_id: @artist.id).each do |artist| %>
<li> <%= artist.name %> </li>
<% end %>

<hr>

<%= link_to "[Edit]", edit_artist_path(@artist.id) %>
<%= link_to "[Delete]", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" } %>
